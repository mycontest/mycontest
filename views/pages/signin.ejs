<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../basic/head") %>

        <style>
            .mycontainer {
                margin-top: 50px;
            }

            .form-signin {
                width: 100%;
                max-width: 420px;
                padding: 15px;
                margin: auto;
            }
        </style>

        <title>MyContest</title>

        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    </head>

    <body>
        <% if(data.user_id) { %> <%- include("../basic/topnav.ejs") %> <% } else { %> <%- include("../basic/stopnav.ejs") %> <% } %>

        <main class="form-signin">
            <div class="container mycontainer">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="login" class="form-label">Foydalanuvchi nomi</label>
                                <input type="text" name="username" class="form-control" id="login" aria-describedby="login" />
                            </div>
                            <div class="mb-3">
                                <label for="parol" class="form-label">Parol</label>
                                <input type="password" name="password" class="form-control" id="parol" />
                            </div>
                            <div class="form-group">
                                <div class="mt-2 mb-2 g-recaptcha" data-sitekey="6LdHIYwqAAAAACCy53SAzSQkU0R500ixeV-7wga5"></div>
                            </div>
                            <% if(err) { %>
                            <div class="alert alert-danger" role="alert"><%= err %></div>
                            <% } %> <% if(scc) { %>
                            <div class="alert alert-success" role="alert"><%= scc %></div>
                            <% } %>
                            <button type="submit" class="btn btn-primary">Tizimga kirish</button>
                            <hr />
                            <a href="/sign-up">Men hali ro'yxatdan o'tmaganman!</a>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
