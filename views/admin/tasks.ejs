<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../basic/head.ejs") %>
    </head>
    <body>
        <%- include("../basic/navbar.ejs") %>

        <div class="container">
            <div class="row">
                <%- include("./sidebar.ejs") %>
                <div class="col">
                    <div class="card">
                        <div class="card-header"><b>Task List</b></div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Edit</th>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>All test</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0;i< arr.length;i++) { %>
                                    <tr>
                                        <td><a href="/admin/tasksadd?task_id=<%= arr[i].task_id %>">Edit</a></td>
                                        <td><%= arr[i].task_id %></td>
                                        <td><%= arr[i].name %></td>
                                        <td><%= arr[i].all_test %></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <nav style="margin-left: 10px">
                                <ul class="pagination" style="flex-wrap: wrap">
                                    <% for(var i=0;i< count; i++ ) { %>
                                    <li class="page-item <%= i==page?'active':'' %>"><a class="page-link" href="?page=<%= i %>"><%= i+1 %></a></li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("../basic/footer.ejs") %>
    </body>
</html>
