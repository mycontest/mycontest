<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Folder</title>
  <style>
    body {
      font-family: 'Inconsolata', monospace;
    }

    .fcard {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    .fileorfolder {
      display: flex;
      width: 200px;
      min-height: 50px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin: 5px;
      padding: 5px;
      box-shadow: 1px 1px 1px rgb(0, 0, 0, 0.3);
    }

    a {
      text-decoration: none;
      word-break: break-all;
      color: black;
      margin: 5px;
    }
  </style>
</head>

<body>

  <a href="/admin/public?prev=1" class="btn"><i class="fa fa-arrow-left " aria-hidden="true"></i> root</a>
  <a href="/admin/public" class="btn"><i class="fa fa-refresh" aria-hidden="true"></i>
    <a href="/admin/public?out=1" class="btn"><i class="fa fa-sign-out" aria-hidden="true"></i>
  </a>
  <div class="fcard">
    <form method="post" enctype="multipart/form-data">
      <div class="form-group">
        <input type="file" class="form-control-file m-2" name="fileinp">
        <button type="submit" class="btn btn-primary m-2">Yuklash</button>
      </div>
    </form>
  </div>
  <div class="fcard">
    <form method="post" >
      <div class="form-group"  style="display: flex;" >
        <input  type="text" class="form-control m-2" name="newfolder">
        <button type="submit" class="btn btn-primary m-2">Yaratish</button>
      </div>
    </form>
  </div>

  <div class="fcard">
    <% for(var i=0;i< arr.length;i++) { %>
    <div class="fileorfolder">
      <a href='?folder=<%= arr[i] %>'><%= arr[i] %></a>
      <a href='?delete=<%= arr[i] %>'><i class="fa fa-trash" aria-hidden="true"></i> </a>
    </div>
    <% } %>
  </div>
</body>

</html>