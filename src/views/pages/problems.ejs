<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Problems - mycontest</title>
    <%- include("../basic/head.ejs") %>
  </head>
  <body>
    <%- include("../basic/navbar.ejs", { data: { user_id: user ? user.user_id : null, full_name: user ? (user.full_name || user.username) : null } }) %>

    <main class="container py-4" style="min-height: 70vh;">
      <div class="problem-shell p-4 mb-3">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-3">
          <div>
            <p class="text-primary fw-semibold small text-uppercase mb-1">Problems</p>
            <h2 class="fw-bold mb-1">Solve problems and improve your skills</h2>
            <p class="text-muted mb-0 small">Search by title and filter difficulty. Results are paginated on the server.</p>
          </div>
          <div class="text-end">
            <div class="text-muted small">Total problems</div>
            <div class="fw-semibold"><%= (pagination && pagination.total) ? pagination.total : problems.length %></div>
          </div>
        </div>

        <form class="row g-2 align-items-end mb-3" method="get" action="/problems">
          <div class="col-lg-6">
            <label class="form-label small text-muted mb-1">Search</label>
            <div class="input-group">
              <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
              <input type="search" class="form-control border-start-0" placeholder="Search by title..." name="search" value="<%= search || '' %>" />
            </div>
          </div>
          <div class="col-lg-3 col-sm-6">
            <label class="form-label small text-muted mb-1">Difficulty</label>
            <select class="form-select" name="difficulty" aria-label="Difficulty filter">
              <option value="" <%= !difficulty ? 'selected' : '' %>>All difficulties</option>
              <option value="easy" <%= difficulty === 'easy' ? 'selected' : '' %>>Easy</option>
              <option value="medium" <%= difficulty === 'medium' ? 'selected' : '' %>>Medium</option>
              <option value="hard" <%= difficulty === 'hard' ? 'selected' : '' %>>Hard</option>
            </select>
          </div>
          <div class="col-lg-3 col-sm-6 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Apply</button>
            <% if (search || difficulty) { %>
              <a href="/problems" class="btn btn-outline-secondary">Reset</a>
            <% } %>
          </div>
        </form>

        <div class="table-responsive">
          <table class="table mb-0 align-middle" id="problemsTable">
            <thead class="table-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Difficulty</th>
                <th scope="col">Languages</th>
                <th scope="col">Solved</th>
              </tr>
            </thead>
            <tbody>
              <% if (problems.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">No problems found for the current filter.</td>
                </tr>
              <% } else { %>
                <% problems.forEach(problem => { %>
                  <tr data-title="<%= problem.title.toLowerCase() %>" data-difficulty="<%= problem.difficulty %>">
                    <td class="text-muted"><%= problem.problem_id %></td>
                    <td>
                      <a href="/problems/<%= problem.problem_id %>" class="fw-semibold text-decoration-none"><%= problem.title %></a>
                    </td>
                    <td>
                      <span class="badge badge-difficulty badge-<%= problem.difficulty %> text-capitalize"><%= problem.difficulty %></span>
                    </td>
                    <td class="text-muted"><%= problem.language_count || 0 %></td>
                    <td class="text-muted"><%= problem.solved_count || 0 %></td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-3">
        <%- include("../partials/pagination") %>
      </div>
    </main>

    <%- include("../basic/footer.ejs") %>
  </body>
</html>
