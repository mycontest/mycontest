<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MyContest</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900 text-gray-100">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8"><%= contest.title %></h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-gray-800 rounded-lg p-4">
                <div class="text-gray-400 text-sm">Status</div>
                <div class="text-xl font-bold"><%= contest.status %></div>
            </div>
            <div class="bg-gray-800 rounded-lg p-4">
                <div class="text-gray-400 text-sm">Start Time</div>
                <div><%= new Date(contest.start_time).toLocaleString() %></div>
            </div>
            <div class="bg-gray-800 rounded-lg p-4">
                <div class="text-gray-400 text-sm">End Time</div>
                <div><%= new Date(contest.end_time).toLocaleString() %></div>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">Problems</h2>
            <% contest.problems.forEach(problem => { %>
            <a href="/problems/<%= problem.problem_id %>" class="block p-4 bg-gray-700 rounded mb-2">
                <%= problem.title %>
            </a>
            <% }) %>
        </div>

        <div class="bg-gray-800 rounded-lg p-6">
            <h2 class="text-2xl font-bold mb-4">Leaderboard</h2>
            <table class="w-full">
                <thead>
                    <tr>
                        <th class="px-4 py-2">Rank</th>
                        <th class="px-4 py-2">User</th>
                        <th class="px-4 py-2">Solved</th>
                        <th class="px-4 py-2">Score</th>
                    </tr>
                </thead>
                <tbody>
                    <% leaderboard.forEach((entry, idx) => { %>
                    <tr>
                        <td class="px-4 py-2">#<%= idx + 1 %></td>
                        <td class="px-4 py-2"><%= entry.username %></td>
                        <td class="px-4 py-2"><%= entry.solved %></td>
                        <td class="px-4 py-2"><%= entry.total_score %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
