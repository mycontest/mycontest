<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Submission - mycontest</title>
    <%- include("../basic/head.ejs") %>
  </head>
  <body>
    <%- include("../basic/navbar.ejs", { data: { user_id: user ? user.user_id : null, full_name: user ? (user.full_name || user.username) : null } }) %>

    <main class="container py-4">
      <div class="problem-shell p-3 mb-3">
        <h4 class="fw-bold mb-2">Submission #<%= submission.submission_id %></h4>
        <div class="row g-2 text-muted small">
          <div class="col-md-3">Problem: <a href="/problems/<%= submission.problem_id %>"><%= submission.problem_title %></a></div>
          <div class="col-md-2">Status: <span class="text-capitalize"><%= submission.status %></span></div>
          <div class="col-md-2">Language: <%= submission.lang_name %></div>
          <div class="col-md-2">Submitted: <%= submission.submitted_at %></div>
          <div class="col-md-3">Tests: <%= submission.test_passed %>/<%= submission.test_total %></div>
        </div>
      </div>

      <div class="problem-shell p-3">
        <h6 class="fw-semibold mb-2">Source</h6>
        <pre class="sample-block"><code><%= submission.code_body %></code></pre>
      </div>
    </main>

    <%- include("../basic/footer.ejs") %>
  </body>
</html>
