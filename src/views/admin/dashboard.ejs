<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - MyContest</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900 text-gray-100">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Admin Dashboard</h1>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-lg p-6">
                <div class="text-4xl font-bold mb-2"><%= stats.total_users %></div>
                <div class="text-blue-200">Total Users</div>
            </div>

            <div class="bg-gradient-to-br from-green-600 to-green-800 rounded-lg p-6">
                <div class="text-4xl font-bold mb-2"><%= stats.total_problems %></div>
                <div class="text-green-200">Total Problems</div>
            </div>

            <div class="bg-gradient-to-br from-purple-600 to-purple-800 rounded-lg p-6">
                <div class="text-4xl font-bold mb-2"><%= stats.total_submissions %></div>
                <div class="text-purple-200">Total Submissions</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-gray-800 rounded-lg p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">Quick Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <a href="/admin/problems/create" class="bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg text-center">
                    Create Problem
                </a>
                <a href="/admin/problems" class="bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg text-center">
                    Manage Problems
                </a>
                <a href="/admin/languages" class="bg-purple-600 hover:bg-purple-700 px-6 py-3 rounded-lg text-center">
                    Manage Languages
                </a>
                <a href="/admin/users" class="bg-orange-600 hover:bg-orange-700 px-6 py-3 rounded-lg text-center">
                    Manage Users
                </a>
            </div>
        </div>

        <!-- Recent Submissions -->
        <div class="bg-gray-800 rounded-lg p-6">
            <h2 class="text-2xl font-bold mb-4">Recent Submissions</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-4 py-2 text-left">ID</th>
                            <th class="px-4 py-2 text-left">User</th>
                            <th class="px-4 py-2 text-left">Problem</th>
                            <th class="px-4 py-2 text-left">Language</th>
                            <th class="px-4 py-2 text-left">Status</th>
                            <th class="px-4 py-2 text-left">Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stats.recent_submissions.forEach(sub => { %>
                        <tr class="border-t border-gray-700">
                            <td class="px-4 py-2">#<%= sub.submission_id %></td>
                            <td class="px-4 py-2"><%= sub.username %></td>
                            <td class="px-4 py-2"><%= sub.problem_title %></td>
                            <td class="px-4 py-2"><%= sub.lang_name || 'N/A' %></td>
                            <td class="px-4 py-2">
                                <span class="status-<%= sub.status %>">
                                    <%= sub.status %>
                                </span>
                            </td>
                            <td class="px-4 py-2">
                                <%= new Date(sub.submitted_at).toLocaleString() %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <style>
        .status-accepted { color: #22c55e; }
        .status-wrong_answer { color: #ef4444; }
        .status-pending { color: #eab308; }
    </style>
</body>
</html>
