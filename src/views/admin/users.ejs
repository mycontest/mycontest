<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MyContest</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900 text-gray-100">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8"><%= title %></h1>

        <div class="bg-gray-800 rounded-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left">ID</th>
                        <th class="px-6 py-3 text-left">Username</th>
                        <th class="px-6 py-3 text-left">Email</th>
                        <th class="px-6 py-3 text-left">Full Name</th>
                        <th class="px-6 py-3 text-left">Role</th>
                        <th class="px-6 py-3 text-left">Subscription</th>
                        <th class="px-6 py-3 text-left">Score</th>
                        <th class="px-6 py-3 text-left">Joined</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                    <tr class="border-t border-gray-700">
                        <td class="px-6 py-4"><%= user.user_id %></td>
                        <td class="px-6 py-4"><%= user.username %></td>
                        <td class="px-6 py-4"><%= user.email %></td>
                        <td class="px-6 py-4"><%= user.full_name || '-' %></td>
                        <td class="px-6 py-4">
                            <span class="<%= user.role === 'admin' ? 'text-purple-400' : 'text-gray-400' %>">
                                <%= user.role %>
                            </span>
                        </td>
                        <td class="px-6 py-4"><%= user.subscription %></td>
                        <td class="px-6 py-4 font-bold text-blue-400"><%= user.total_score %></td>
                        <td class="px-6 py-4"><%= new Date(user.created_at).toLocaleDateString() %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('../partials/pagination') %>
    </main>
</body>
</html>
