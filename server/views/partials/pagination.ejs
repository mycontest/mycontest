<% if (pagination && pagination.total_pages > 1) { %>
  <% const qs_raw = typeof query_string !== 'undefined' ? query_string : (typeof queryString !== 'undefined' ? queryString : ''); %>
  <% const qs = qs_raw ? '&' + qs_raw : ''; %>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <div class="btn-group" role="group">
      <% if (pagination.page > 1) { %>
        <a href="?page=<%= pagination.page - 1 %><%= qs %>" class="btn btn-outline-secondary btn-sm">Prev</a>
      <% } else { %>
        <button class="btn btn-outline-secondary btn-sm" disabled>Prev</button>
      <% } %>

      <% if (pagination.page < pagination.total_pages) { %>
        <a href="?page=<%= pagination.page + 1 %><%= qs %>" class="btn btn-outline-secondary btn-sm">Next</a>
      <% } else { %>
        <button class="btn btn-outline-secondary btn-sm" disabled>Next</button>
      <% } %>
    </div>
    <div class="text-muted small">
      Showing <%= ((pagination.page - 1) * pagination.limit) + 1 %>
      to <%= Math.min(pagination.page * pagination.limit, pagination.total) %>
      of <%= pagination.total %> results
    </div>
  </div>
<% } %>
