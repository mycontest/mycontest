<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Languages - Admin - MyContest</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900 text-gray-100">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Manage Languages</h1>

        <!-- Add Language Form -->
        <div class="bg-gray-800 rounded-lg p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">Add New Language</h2>
            <form action="/admin/languages/add" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm mb-2">Language Name</label>
                    <input type="text" name="lang_name" required placeholder="Python 3"
                           class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
                </div>

                <div>
                    <label class="block text-sm mb-2">Language Code</label>
                    <input type="text" name="lang_code" required placeholder="python"
                           class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
                </div>

                <div>
                    <label class="block text-sm mb-2">File Extension</label>
                    <input type="text" name="file_extension" required placeholder="py"
                           class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
                </div>

                <div>
                    <label class="block text-sm mb-2">Run Command</label>
                    <input type="text" name="run_command" required placeholder="python3 source.py"
                           class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm mb-2">Compile Command (optional)</label>
                    <input type="text" name="compile_command" placeholder="g++ source.cpp -o executable"
                           class="w-full bg-gray-700 border border-gray-600 rounded px-4 py-2">
                </div>

                <div class="md:col-span-2">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-lg">
                        Add Language
                    </button>
                </div>
            </form>
        </div>

        <!-- Languages List -->
        <div class="bg-gray-800 rounded-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left">ID</th>
                        <th class="px-6 py-3 text-left">Name</th>
                        <th class="px-6 py-3 text-left">Code</th>
                        <th class="px-6 py-3 text-left">Extension</th>
                        <th class="px-6 py-3 text-left">Run Command</th>
                        <th class="px-6 py-3 text-left">Status</th>
                        <th class="px-6 py-3 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% languages.forEach(lang => { %>
                    <tr class="border-t border-gray-700">
                        <td class="px-6 py-4"><%= lang.lang_id %></td>
                        <td class="px-6 py-4"><%= lang.lang_name %></td>
                        <td class="px-6 py-4"><code class="bg-gray-700 px-2 py-1 rounded"><%= lang.lang_code %></code></td>
                        <td class="px-6 py-4"><code class="bg-gray-700 px-2 py-1 rounded">.<%= lang.file_extension %></code></td>
                        <td class="px-6 py-4"><code class="text-sm"><%= lang.run_command %></code></td>
                        <td class="px-6 py-4">
                            <span class="<%= lang.is_active ? 'text-green-400' : 'text-red-400' %>">
                                <%= lang.is_active ? 'Active' : 'Inactive' %>
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <form action="/admin/languages/<%= lang.lang_id %>/toggle" method="POST" class="inline">
                                <button type="submit" class="text-blue-400 hover:text-blue-300">
                                    <%= lang.is_active ? 'Deactivate' : 'Activate' %>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
