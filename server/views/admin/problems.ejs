<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MyContest</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900 text-gray-100">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-4xl font-bold"><%= title %></h1>
            <a href="/admin/problems/create" class="bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg font-semibold">
                + Create Problem
            </a>
        </div>

        <div class="bg-gray-800 rounded-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left">#</th>
                        <th class="px-6 py-3 text-left">Title</th>
                        <th class="px-6 py-3 text-left">Difficulty</th>
                        <th class="px-6 py-3 text-left">Languages</th>
                        <th class="px-6 py-3 text-left">Solved</th>
                        <th class="px-6 py-3 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% problems.forEach(problem => { %>
                    <tr class="border-t border-gray-700">
                        <td class="px-6 py-4"><%= problem.problem_id %></td>
                        <td class="px-6 py-4">
                            <a href="/problems/<%= problem.problem_id %>" class="text-blue-400 hover:text-blue-300">
                                <%= problem.title %>
                            </a>
                        </td>
                        <td class="px-6 py-4">
                            <span class="difficulty-<%= problem.difficulty %>">
                                <%= problem.difficulty %>
                            </span>
                        </td>
                        <td class="px-6 py-4"><%= problem.language_count || 0 %></td>
                        <td class="px-6 py-4"><%= problem.solved_count || 0 %></td>
                        <td class="px-6 py-4">
                            <a href="/admin/problems/<%= problem.problem_id %>/edit" class="text-blue-400 hover:text-blue-300 mr-4">
                                Edit
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <style>
        .difficulty-easy { color: #22c55e; }
        .difficulty-medium { color: #eab308; }
        .difficulty-hard { color: #ef4444; }
    </style>
</body>
</html>
