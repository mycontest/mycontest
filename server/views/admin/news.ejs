<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../basic/head.ejs") %>
    </head>
    <body>
        <%- include("../basic/navbar.ejs") %>

        <div class="container">
            <div class="row">
                <%- include("./sidebar.ejs") %>
                <div class="col">
                    <div class="card">
                        <div class="card-header"><b>News List</b></div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Edit</th>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Content</th>
                                        <th>Create DT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0;i< news.length;i++) { %>
                                    <tr>
                                        <td><a href="/admin/newsadd?news_id=<%= news[i].news_id %>">Edit</a></td>
                                        <td><%= news[i].news_id %></td>
                                        <td><%= news[i].title %></td>
                                        <td><%= news[i].content %></td>
                                        <td><%= news[i].created_dt %></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include("../basic/footer.ejs") %>
    </body>
</html>
